<head>
     <title>Mon Panier</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>

<body>
    {% include '_base/_header.html.twig' %}
    <div class="container-fuild">
        <div class="row my-3 px-3">
            <div class="col-12">
                <h3>Mon Paniers</h3>
                {% if products == null %}
                    <h1>Aucun Produit</h1>
                {% else %}
                    <table class="table table-striped table-hover">
                        <thead class="text-center">
                            <tr style="background-color: #9fcdd4;font-size: 0.85em">
                                <th>Numero de commande</th>
                                <th>Image du service</th>
                                <th>Nom du service</th>
                                <th>Description</th>
                                <th>Price</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody class="text-center">
                            {% for product in products %}
                             <tr>
                                 <td>{{ product.id }}</td>
                                 <td>
                                     <div style="width: 150px;height: 150px"><img src="{{ asset('build/images/' ~ product.image) }}" class="img-fluid"></div>
                                 </td>
                                 <td>{{ product.name }}</td>
                                 <td>{{ product.content }}</td>
                                 <td>{{ product.price }}</td>
                                 <td></td>
                             </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                    {{ form_start(form) }}
                    <input type="submit" value="Acheter">
                    {{ form_end(form) }}
                {% endif %}
            </div>
        </div>
    </div>
    {% include '_base/_footer.html.twig' %}
</body>



