{% extends 'base.html.twig' %}

{% block body %}
    {% include '_base/_header.html.twig' %}
    <h1>Mes programmes</h1>
        <div class="container">
            <div class="row">
                <div class="col-6">
                    <img src="{{ asset('build/images/' ~ product.image) }}" class="img-fluid">
                </div>
                <div>{{ product.name }}</div>
                <div>{{ product.content}}</div>
                <div>{{ product.price }}</div>
                <a href="{{ path('app_product', {'id': product.id}) }}?addCart=true" class="btn btn-primary">Ajouter</a>
            </div>
        </div>
    {% include '_base/_footer.html.twig' %}
{% endblock %}