{% extends 'base.html.twig' %}

{% block body %}
    {% include '_base/_header.html.twig' %}
    <div class="container-fluid mx-0 px-0">
        <div class="row mx-0 px-0" style="background-image:url({{ asset('build/images/' ~ product.cover) }});height: 250px;background-position: bottom;background-size: cover">

        </div>
        <div class="row bg-warning m-0">
            <div class="col-12">
                <h1 class="text-white text-center">{{ product.name }}</h1>
            </div>
        </div>
        <div class="row justify-content-between mx-0 px-0">
            <div class="col-6 px-0">
                <img src="{{ asset('build/images/' ~ product.cover2) }}" class="img-fluid">
            </div>
            <div class="col-6">
                <h3 class="text-uppercase font-2 text-center pt-4 mb-2">{{ product.name }}</h3>
                <div class="text-center">{{ product.content }}</div>
                <div class="text-center">{{ product.content1 }}</div>
                <div class="text-center">{{ product.content2 }}</div>
                <div class="text-center mb-4">{{ product.content3 }}</div>
                <p class="px-2">{{ product.description }}</p>
                <div class="px-2">Prix: {{ product.price }}<strong>â‚¬</strong></div>
                <div class="text-center my-3"><a href="{{ path('app_product', {'id': product.id}) }}?addCart=true" class="btn btn-primary col-6 text-center">Ajouter</a></div>
            </div>
        </div>
    </div>
    {% include '_base/_footer.html.twig' %}
{% endblock %}