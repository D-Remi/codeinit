{% extends 'base.html.twig' %}

{% block body %}
    {% include '_base/_header.html.twig' %}
    <div class="container-fluid m-0 p-0">
        <div class="row" style="background-image:url({{ asset('build/images/' ~ product.cover) }});height: 250px;background-position: bottom;background-size: cover">

        </div>
        <div class="row bg-warning">
            <div class="col-12">
                <h1 class="text-white text-center">{{ product.name }}</h1>
            </div>
        </div>
        <div class="row justify-content-between">
            <div class="col-6">
                <img src="{{ asset('build/images/' ~ product.cover2) }}" class="img-fluid">
            </div>
            <div class="col-6">
                <h3 class="text-uppercase font-2 text-center pt-4 border">{{ product.name }}</h3>
                
                    <div class="text-center border m-0">{{ product.content }}</div>
                    <div class="text-center border">{{ product.content1 }}</div>
                    <div class="text-center border">{{ product.content2 }}</div>
                    <div class="text-center border">{{ product.content3 }}</div>

                <p class="px-2">{{ product.description }}</p>
                <div><a href="{{ path('app_product', {'id': product.id}) }}?addCart=true" class="btn btn-primary col-6">Ajouter</a>{{ product.price }} euros</div>
            </div>
        </div>
    </div>
    {% include '_base/_footer.html.twig' %}
{% endblock %}