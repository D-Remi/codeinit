{% extends 'front/login-register/index.html.twig'%}

{% block title %}Inscription{% endblock %}

{% block body %}

        <h1 class="text-center mt-5 mb-2 mt-md-5 mb-md-3 font-1">Inscription</h1>
        <hr class="col-2 text-center">

        <form class="text-center my-4">
            {{ form_start(registrationForm) }}
            {{ form_errors(registrationForm) }}
            <div class="pseudoname my-4 mt-5">
                {{ form_widget(registrationForm.pseudoName, {'attr': {'class': 'input__inner color-init font-1','placeholder': 'Nom d\'utilisateur' }}) }}
                <span class="text-danger">{{ form_errors(registrationForm.pseudoName) }}</span>
            </div>
            <div class="d-flex justify-content-center my-4">
                {{ form_widget(registrationForm.name, {'attr': {'class': 'input__inner color-init mr-3','placeholder': 'Votre nom'}}) }}
                {{ form_widget(registrationForm.firstName, {'attr': {'class': 'input__inner color-init','placeholder': 'Votre prénom'}}) }}
            </div>
            <div class="d-flex justify-content-center my-4">
                {{ form_widget(registrationForm.email, {'attr': {'class': 'input__inner color-init mr-3','placeholder': 'Votre email'}}) }}
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'input__inner color-init','placeholder': 'Mot de passe'}}) }}
            </div>

            <button type="submit" class="btn-init h4 px-3 text-white my-2 my-sm-5 border-0">INSCRIPTION</button>
            <div><span class="text-center font-2 text-dark">Déjà inscrit? <a href="{{ path('app_login') }}" class="text-dark text-transform-none font-2">Connectez-vous</a></span></div>
            {{ form_end(registrationForm) }}
        </form>

{% endblock %}
