{% extends 'back/dashboard/menu.html.twig' %}

{% block title %}Code Init{% endblock %}

{% block body %}

    <div class="container-fuild">
        <div class="row my-3">
            <div class="col-12">
                <h3>Liste des utilisateurs</h3>
                    <table class="table table-striped table-hover">
                        <thead class="text-center">
                            <tr style="background-color: #9fcdd4;font-size: 0.85em">
                                <th>Id</th>
                                <th>Nom</th>
                                <th>Prénom</th>
                                <th>Nom Utilisateurs</th>
                                <th>Email</th>
                                <th>Rôles</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody class="text-center">
                            {% for user in users %}
                                <tr>
                                    <td>{{ user.id }}</td>
                                    <td>{{ user.name }}</td>
                                    <td>{{ user.firstName }}</td>
                                    <td>{{ user.pseudoName }}</td>
                                    <td>{{ user.email }}</td>
                                    {% if user.roles[0] == "ROLE_ADMIN" %}
                                        <td>Administrateur</td>
                                    {% else %}
                                        <td>Utilisateur</td>
                                    {% endif%}
                                    <td>
                                        <a class="text-secondary" href="{{ path('app_update_user', {'id': user.id}) }}"><i class="fas fa-pencil-alt"></i></a>
                                        <a  class="text-danger" href="{{ path('app_delete_user', {'id': user.id}) }}" ><i class="fa fa-trash"></i></a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                    <div class="bloc-de-bouton">
                        <a type="button" href="{{ path('app_admin') }}" class="btn btn-primary"><i class="btn-icon fas fa-angle-left"></i>Retour</a>
                    </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
{% endblock %}