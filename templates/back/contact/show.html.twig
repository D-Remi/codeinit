{% extends 'back/dashboard/menu.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <div class="container">
        <h3 class="text-center">Vos Message</h3>
        <div class="row m-5">
            <div class="col-6">
                <img src="{{ asset('build/images/img-01.png') }}" class="img-fluid">
            </div>
            <div class="col-6">
                <div>Nom:{{ contact.name }} Prenom: {{ contact.firstName }}</div>
                <div>Email:{{ contact.email }} Objet: {{ contact.object }}</div>
                <div>{{ contact.message }}</div>
                <a href="{{ path('app_delete_contact', {'id': contact.id}) }}" class="btn btn-warning">Supprimer</a>
            </div>
        </div>
    </div>
{% endblock %}